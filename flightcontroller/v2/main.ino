#include "flugkatze.h"
#include "filter.h"
#include "state.h"

MPU6050 imu;

State_c State;

/*
	ROLLING AXIS -> X AXIS of the GYRO
	PITCHING AXIS -> Y AXIS of the GYRO
	YAWING AXis -> Z AXIS of the GYRO
*/


///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Setup routine
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
void setup(){

	State.initState();
	State.initIMU();
	State.initFilters(10, 10, 10);
	
	Serial.begin(BAUDRATE);
    Wire.begin();                                                //Start the I2C as master.
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Main program loop /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// 
void loop(){
   	
	State.updateState();
	State.printState();

